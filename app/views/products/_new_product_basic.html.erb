<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :code, "Mã hàng hóa (Tối đa 32 ký tự)" %>
      <%= f.text_field :code, class: "form-control form-control-sm", placeholder: "Hệ thống sẽ tự tạo nếu để trống" %>
    </div>

    <div class="form-group">
      <%= f.label :name, "Tên hàng hóa" %> <span style="color: red;">*</span>
      <%= f.text_field :name, class: "form-control form-control-sm", placeholder: "Nhập tên hàng hóa của bạn" %>
    </div>

    <div class="form-group">
      <%= f.label :product_group_id, "Nhóm hàng" %>
      <div class="input-group">
        <%= f.select :product_group_id, options_for_select(@product_group_options), {prompt: "-- Chọn nhóm hàng nếu có --"}, {class: "custom-select form-control form-control-sm"} %>
        <div class="input-group-append">
          <%= link_to product_groups_path, class: "btn btn-outline-secondary btn-sm", remote: true do %>
            <%= fa_icon("ellipsis-h") %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :cost_price, "Giá vốn" %>
          <%= f.number_field :cost_price, class: "form-control text-right form-control-sm", placeholder: "Nhập giá vốn" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :sale_price, "Giá bán" %>
          <div class="input-group">
            <%= f.number_field :sale_price, class: "form-control text-right form-control-sm", value: 0 %>
            <div class="input-group-append">
              <%= link_to "#", class: "btn btn-outline-secondary btn-sm" do %>
                <%= fa_icon("tags") %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :producer_id, "Nhà sản xuất" %>
      <div class="input-group">
        <%= f.select :producer_id, options_for_select(@producers.collect{|producer| [producer.name, producer.id]}), {prompt: "-- Không có nhà sản xuất --"}, { class: "form-control form-control-sm" } %>
        <div class="input-group-append">
          <%= link_to producers_path, class: "btn btn-outline-secondary btn-sm", remote: true do %>
            <%= fa_icon("ellipsis-h") %>
          <% end %>
        </div>
      </div>
    </div>

  </div>
  <div class="col-md-6">
    <div class="images"></div>

    <div class="manage-stock">
      <div class="form-group row">
        <%= f.label :in_stock, "Số lượng hàng trong kho", class: "col-md-6 mt-1" %>
        <div class="col-md-6">
          <%= f.number_field :in_stock, class: "form-control form-control-sm text-right", value: 0 %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :in_stock_min, "Tồn kho tối thiểu", class: "col-md-6 mt-1" %>
        <div class="col-md-6">
          <%= f.number_field :in_stock_min, class: "form-control form-control-sm text-right", value: 0 %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :in_stock_max, "Tồn kho tối đa", class: "col-md-6 mt-1" %>
        <div class="col-md-6">
          <%= f.number_field :in_stock_max, class: "form-control form-control-sm text-right", value: 999999999 %>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-header" id="header-property">
        <%= link_to "#collapseProperty", 'data-toggle': "collapse", 'aria-expanded': "true", class: "btn btn-link p-0 font-weight-bold" do %>
          Theo dõi thuộc tính (Màu sắc, kích thước, ...)
        <% end %>
        <div class="float-right">
          <i class="fa" aria-hidden="true"></i>
        </div>
      </div>
      <div class="collapse" aria-labelledby="header-property" id="collapseProperty">
        <div class="card-body">
          Property
        </div>
      </div>

    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col">
    <div class="card">
      <div class="card-header" id="header-unit">
        <%= link_to "#collapseUnit", 'data-toggle': "collapse", 'aria-expanded': "true", class: "btn btn-link p-0 font-weight-bold" do %>
          Đơn vị tính
        <% end %>
        <div class="float-right">
          <i class="fa" aria-hidden="true"></i>
        </div>
      </div>
      <div class="collapse" aria-labelledby="header-unit" id="collapseUnit">
        <div class="card-body">
          Unit
        </div>
      </div>

    </div>
  </div>
</div>