<% if user_signed_in? %>
var message = "<%= j render :partial => 'form', locals: {print_template: @print_template} %>";
message = message.replace(/(?:\r\n|\r|\n)/g, '');
var modal = "<%= j render :partial => 'shared/modal_submit_large', locals: {title: t(:add_new_member), submit_id: 'submit_add_member_btn'} %>";
modal = modal.replace(/(?:\r\n|\r|\n)/g, '');
$("body").append(modal);
$(".modal-body").html(message);
$("#park-modal").modal({
    backdrop: 'static',
    keyboard: false
});
<% end %>